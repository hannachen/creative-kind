    <input type="text" class="form-control" id="color-name" name="name" placeholder="Set Name">
  </fieldset>

  <fieldset class="form-group">
    <label for="color-1">Colour 1</label>
    <input type="text" class="form-control" id="color-1" name="color[]" placeholder="Colour 1">
  </fieldset>

  <fieldset class="form-group">
    <label for="color-2">Colour 2</label>
    <input type="text" class="form-control" id="color-2" name="color[]" placeholder="Colour 2">
  </fieldset>

  <fieldset class="form-group">
    <label for="color-3">Colour 3</label>
    <input type="text" class="form-control" id="color-3" name="color[]" placeholder="Colour 3">
  </fieldset>

  <fieldset class="form-group">
    <label for="color-4">Colour 4</label>
    <input type="text" class="form-control" id="color-4" name="color[]" placeholder="Colour 4">
  </fieldset>

  <fieldset class="form-group">
    <label for="color-5">Colour 5</label>
    <input type="text" class="form-control" id="color-5" name="color[]" placeholder="Colour 5">
  </fieldset>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>