{{#section 'footer'}}
  <script src="/js/patch.min.js"></script>
{{/section}}
<div class="patch-container" data-mode="edit">

  <ul class="toolbar">
    <li class="tool multiple">
      <span class="label">Select Multiple</span>
      <input class="select-multiple" type="checkbox" checked>
    </li>
    <li class="tool"><button data-tool="line-toggle">Toggle Lines</button></li>
    <li class="tool"><button data-tool="clear">Clear Selection</button></li>
  </ul>
  <div id="canvas-container" class="canvas-container select">
    <img class="grid-spacer" />
    <canvas id="coloring-area" class="coloring-area"></canvas>
  </div>
  <ul class="color-palette">
    <li class="color"><button class="color-button" data-color="#588C7E" style="background-color:#588C7E;"></button></li>
    <li class="color"><button class="color-button" data-color="#F2E394" style="background-color:#F2E394;"></button></li>
    <li class="color"><button class="color-button" data-color="#F2AE72" style="background-color:#F2AE72;"></button></li>
    <li class="color"><button class="color-button" data-color="#D96459" style="background-color:#D96459;"></button></li>
    <li class="color"><button class="color-button" data-color="#8C4646" style="background-color:#8C4646;"></button></li>
  </ul>
  <form action="/patch/edit/{{patch.uid}}/colors" class="palette-selector" method="post" id="paletteSelector">
    <input type="hidden" class="selected-set" value="{{patch.colorSet}}" />
    <ul class="color-sets">
      {{#each patch._quilt._theme.colors}}
      <li class="color-set">
        Colour set {{@index}}
        <input class="selection" type="radio" name="colorSet" value="{{@index}}" id="set{{@index}}" />
        <label class="label" for="set{{@index}}">
          <ul class="swatches">
            {{#each colors}}
              <li class="swatch" style="background-color:#{{this}}" data-hex="#{{this}}">&nbsp;</li>
            {{/each}}
          </ul>
        </label>
      </li>
      {{/each}}
    </ul>
  </form>
  <div id="saveData">
    {{patch.svg}}
  </div>
  <form action="/patch/edit/{{patch.uid}}" method="post" id="formActions">
    <button class="action-button" name="saveAction" data-target="#formActions" value="progress">Save</button>
    <button class="action-button" name="completeAction" data-target="#formActions" value="complete">Complete</button>
  </form>

</div>