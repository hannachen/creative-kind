{{#if patches}}
  <div class="data" id="quilt-data"{{#if newPatch}} data-new-patch="{{newPatch}}"{{/if}}>
    {{quiltData}}
  </div>
  <div class="quilt-container">
    <div id="canvas-container" class="canvas-container" data-quilt-id="{{quilt.id}}">
      <div class="grid-spacer" id="grid-spacer"></div>
      <canvas id="grid-area" class="grid-area"></canvas>
    </div>
    <div class="patch-preview" id="patch-preview"></div>
  </div>
{{/if}}

<h2 class="quilt-name {{quilt.type}}">
  {{quilt.title}}
  {{#if_eq quilt.type "private"}}
    <span class="quilt-user">By: {{quilt._user.username}}</span>
  {{/if_eq}}
</h2>

{{>theme }}

{{#if_eq user.id quilt._user.id}}
  {{>invite}}
{{/if_eq}}