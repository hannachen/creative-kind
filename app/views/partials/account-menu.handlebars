<div id="account-drawer" class="drawer dw-xs-8 dw-sm-6 dw-md-3 fold" aria-labelledby="account-drawer">
  <button class="drawer-toggle" data-toggle="drawer" data-target="#account-drawer" aria-foldedopen="false" aria-controls="account-drawer">
    <span class="icon">&times;</span>
  </button>
  <div class="drawer-contents">
    {{#if user}}
      <h2>
        <span class="account-username">{{user.username}}</span>
        {{#if user.usertype}}
          {{#if_eq user.usertype 'admin'}}<a href="/qb-admin">{{/if_eq}}
          <span class="tag tag-default account-type">{{user.usertype}}</span>
          {{#if_eq user.usertype 'admin'}}</a>{{/if_eq}}
        {{/if}}
      </h2>
      <ul class="list-group">
        <li class="list-group-item"><a href="/account/patches">My Squares</a></li>
        <li class="list-group-item"><a href="/account/quilts">My Quilts</a></li>
        <li class="list-group-item disabled">Notifications</li>
        <li class="list-group-item"><a href="/quilts/create">Create a quilt</a></li>
        <li class="list-group-item"><a href="/account">My Profile</a></li>
        <li class="list-group-item"><a href="/account/logout">Logout</a></li>
      </ul>
    {{else}}
      <ul class="list-group">
        <li class="list-group-item"><a href="/account/login">Log In</a></li>
        <li class="list-group-item"><a href="/account/signup">Sign Up</a></li>
      </ul>
    {{/if}}

  </div>
</div>