  {{#if user}}
    {{>account-menu }}
  {{/if}}

  <div class="container-fluid header-menu">
    <div class="row">
      <div class="col account-nav-toggle">
        {{#if user}}
            <button class="drawer-toggle" data-toggle="drawer" data-target="#account-drawer" aria-controls="account-drawer">User</button>
        {{/if}}
      </div>
      <div class="col title"><h1>{{title }}</h1></div>
      <div class="col sub-menu-toggle">
        <button class="drawer-toggle" data-toggle="drawer" data-target="#submenu-drawer" aria-controls="submenu-drawer">Menu</button>
      </div>
    </div>
  </div>

  <div class="container contents">
    {{{body}}}
  </div><!-- end .contents -->

  {{>sub-menu }}

  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '639206986218739',
        xfbml      : true,
        version    : 'v2.5'
      });
    };

    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>

